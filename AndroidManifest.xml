<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eccproductions.androidinvaders"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" android:maxSdkVersion="17"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- SplashActivity -->
        <activity
            android:name="com.eccproductions.androidinvaders.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name="com.eccproductions.androidinvaders.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eccproductions.androidinvaders.action.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- GameActivity -->
        <activity
            android:name="com.eccproductions.androidinvaders.GameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eccproductions.androidinvaders.action.GAMEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- OptionsActivity -->
        <activity
            android:name="com.eccproductions.androidinvaders.OptionsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eccproductions.androidinvaders.action.OPTIONSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>